@page
@model MyNUnitWeb.Pages.TestResult
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Test result</title>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">
    </head>
    <body>
    <div class="row mb-3 text-center"><h2 class="col-sm-6">List of tests:</h2></div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Result</th>
                <th>Time (ms)</th>
                <th>Message</th>
                <th>Exception</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var test in Model.Tests)
            {
                <tr>
                    <td>@test.Name</td>
                    <td>@(test.Result == 1 ? "Passed" : test.Result == 0 ? "Failed" : "Ignored")</td>
                    <td>@test.Time</td>
                    <td>@test.Message</td>
                    <td>@test.E</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row mb-2">
        <form action="/Index">
            <div class="col-sm-2 d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Home</button>
            </div>
        </form>
        <form action="/TestRuns">
            <div class="col-sm-2 d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Test runs</button>
            </div>
        </form>
    </div>
    </body>
</html>
